border-box-html()
normalize-css()

bg = 'http://assets.nydailynews.com/polopoly_fs/1.2043544.1418424634!/img/httpImage/image.jpg_gen/derivatives/landscape_1200/castellano-paul-big-paulie-mafia.jpg'
//$font-stack = $georgiao

@keyframes hide
	0%
		opacity: 1
	50%
		opacity: 1
	100%
		opacity: 0

html
	font-family: "Segoe UI";
	font-size: responsive 14px 16px
	line-height: 1.3
	&.bg
		background: url(bg) no-repeat center center fixed 
		-webkit-background-size: cover
		-moz-background-size: cover
		-o-background-size: cover
		background-size: cover
html, body, .container
	min-height: 100%
	min-width: 100%
html, body
	height: 100%
	width: 100%
.container
	background-color: rgba(white, .9)
main
	padding-top: 50px
	padding-bottom: 50px
	.auth-column
		max-width: 400px
		margin-left: 2%
		margin-right: 2%
		.form-group
			white-space: nowrap
			display: flex
			width: 100%
			label
				padding-right: 6px
			input
				display: block
				width: 100%
				flex-grow: 1
				font-family: inherit
				italic()
		.auth-links
			margin-top: 5px
			font-size: 1rem
		.help-block
			font-family: $font-stack
			font-size: small
			display: absolute
			color: #f00
.alert
	fixed: top 0 right 0
	pointer-events: none
	opacity: 0
	animation-name: hide
	animation-duration: 4s
.auth-links
	&.logged-in
		absolute: top 0 right 5px
	a
		padding: 0 5px
	a:not(:first-child)
		border-left: 1px solid black
h1, .icon-open-sidebar
	h1()
	margin: 0
h2
	h3()
	margin-bottom: .25em
a, .link
	display: inline
	font-size: 1em
	link: gray lighten
	cursor: pointer
form
	font-size: 1.3rem
button, .button
	margin: 1em 0
	button(rgba(orange, 0.1), medium, black)
	hover-pop: 1.01
	click-down()
	width: 100%
	font-size: 1em
	// uppercase()
	&[disabled]
		button-disabled()
	&:last-child
		margin-bottom: 0
.error
	font-size: 0.8em
	color: #f00
	&:empty
		display: none
