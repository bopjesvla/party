	//max-width: 100%
	//th
		//background: #F9FAFB
		//text-align: center
table.nowrap td, .one-liner 
	white-space: nowrap
	overflow: hidden
	text-overflow: ellipsis
pre
	font-size: 12px
	tab-size: 2
.media
	media-object: 10px
.message, .area
	area()
	margin: 0
.icon-open-sidebar
	z-index: 99
	fixed: top 5px left 10px
+html5-inputs()
	&, /label.placeholder
		font-family: $helvetica
		margin: 0em;
		outline: none;
		-webkit-appearance: none;
		tap-highlight-color: rgba(#fff, 0);
		line-height: 1.2142em;
		padding: 0
		font-size: 1em;
		background: transparent;
	color: rgba(#000, 0.87);
	transition: border-color .2s ease;
	border: none;
	border-radius: 0em;
	border-bottom: 1px solid black
	box-shadow: none;
label.placeholder
	transition: .4s ease;
	white-space: nowrap
	margin-right: -100%
	.ie9 &
		opacity: 1
	
	z-index: 1
	absolute: top bottom left
	color: rgba(140,140,140,.87)
	input:focus + &, &.always
		opacity: .8
		transform: translateX(-100%)
		left: 100%
	input:placeholder-shown + &
		opacity: 0 !important
		left: 90% !important
		transform: translateX(-90%) !important
	opacity: 0
	left: 90%
	transform: translateX(-90%)
